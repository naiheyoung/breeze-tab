{
  "name": "Breeze Tab",
  "description": "Chrome Start Page",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "jsonViewer/js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "jsonViewer/index.html",
        "jsonViewer/js/*",
        "jsonViewer/css/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}